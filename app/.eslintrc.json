{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["standard", "plugin:vue/essential", "prettier" ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "prettier"
//        "plugin:prettier/recommended"
    ],
    "rules": {
        "object-curly-spacing": 1,
        "no-trailing-spaces": "off",
        "eol-last": "off",
        "prettier/prettier": "error"
    }
}
